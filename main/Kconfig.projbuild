menu "micro-ROS BLE Transport"

    config MICROROS_BLE_DEVICE_NAME
        string "BLE Device Name"
        default "microROS_BLE"
        help
            The Bluetooth device name advertised by the ESP32.

    menu "LED Parameters (defaults)"
        config MICROROS_LED_DEFAULT_BRIGHTNESS
            int "Default LED Brightness"
            default 64
            range 0 255
            help
                Default LED brightness (0-255).
                Can be changed at runtime via ROS2 parameter.

        config MICROROS_LED_DEFAULT_RED
            int "Default LED Red"
            default 0
            range 0 255
            help
                Default red channel value (0-255).

        config MICROROS_LED_DEFAULT_GREEN
            int "Default LED Green"
            default 0
            range 0 255
            help
                Default green channel value (0-255).

        config MICROROS_LED_DEFAULT_BLUE
            int "Default LED Blue"
            default 64
            range 0 255
            help
                Default blue channel value (0-255).
    endmenu

    config MICROROS_BLE_RX_QUEUE_SIZE
        int "RX Queue Size"
        default 16
        range 4 64
        help
            Number of packets that can be queued for reception.
            Increase if you experience packet drops.

    config MICROROS_BLE_RX_BUFFER_SIZE
        int "RX Buffer Size (bytes)"
        default 512
        range 64 1024
        help
            Maximum size of a single received packet.
            Should be at least as large as the negotiated MTU.

    config MICROROS_BLE_ADV_INTERVAL_MIN
        hex "Advertising Interval Min (units of 0.625ms)"
        default 0x20
        help
            Minimum advertising interval.
            0x20 = 20ms, 0x40 = 40ms, 0x100 = 160ms

    config MICROROS_BLE_ADV_INTERVAL_MAX
        hex "Advertising Interval Max (units of 0.625ms)"
        default 0x40
        help
            Maximum advertising interval.
            Should be >= min interval.

    config MICROROS_BLE_TX_CHUNK_DELAY_MS
        int "TX Inter-chunk Delay (ms)"
        default 2
        range 0 20
        help
            Delay between BLE notification chunks.
            Helps avoid buffer overflow on slow connections.

    menu "Benchmark Configuration"
        config MICROROS_BENCHMARK_REQUEST_TOPIC
            string "Benchmark Request Topic"
            default "/benchmark/request"
            help
                Topic for receiving benchmark roundtrip requests from host.

        config MICROROS_BENCHMARK_RESPONSE_TOPIC
            string "Benchmark Response Topic"
            default "/benchmark/response"
            help
                Topic for publishing benchmark roundtrip responses to host.
    endmenu

endmenu
